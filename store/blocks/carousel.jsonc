{
  "flex-layout.row#titleCarousel": {
    "children": [
      "flex-layout.col#title"
    ]
  },
  "flex-layout.col#title": {
    "children": [
      "rich-text#titleCarousel",
      "rich-text#line"
    ]
  },
  
  "list-context.product-list#carousel": {
    "blocks": ["product-summary.shelf#carousel"],
    "children": ["slider-layout#carousel"]
  },

  "flex-layout.row#carousel": {
    "children": ["list-context.product-list#carousel"]
  },

  "product-summary.shelf#carousel": {
    "children": [
      "product-summary-image",
      "product-summary-name",
      "product-rating-inline",
      // "product-summary-space",
      "product-summary-price",
      // "product-summary-buy-button"
      "link.product#buy-button"
    ],
    "props": {
      "blockClass": "carousel"
    }
  },

  "product-summary-name": {
    "props": {
      "blockClass": "carousel"
    }
  },

  "product-summary-price": {
    "props": {
      "blockClass": "carousel"
    }
  },

  "product-summary-buy-button": {
    "props": {
      "buyButtonText": "Comprar",
      // "displayBuyButton": "displayButtonHover",
      "buyButtonBehavior": "alwaysAddToTheCart",
      "blockClass": "carousel"
    }
  },

  "link.product#buy-button": {
    "props": {
      "href": "/{slug}/p",
      "label": "Comprar",
      "displayMode": "button",
      "blockClass": "carousel"
    }
  },

  "slider-layout#carousel": {
    "props": {
      "itemsPerPage": {
          "desktop": 4,
          "tablet": 3,
          "phone": 2
      },
        "infinite": true,
        "showNavigationArrows": "desktopOnly",
        "showPaginationDots": "mobileOnly",
        "fullWidth": true,
        "blockClass": "carousel"
    }
  },

  "rich-text#titleCarousel": {
    "props": {
      "text": "### Mais Vendidos",
      "blockClass":"carousel"
    }
  },

  "rich-text#line": {
    "props": {
      "text": "---",
      "blockClass":"line"
    }
  }
}
